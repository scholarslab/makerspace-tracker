extends layout

block content
  - var headers = [ "Print ID", "Image", "Printer & Setup", "Print File", "Notes", "Patron", "Tech", "Date Created" ]
  - var s3URL = 'https://s3.amazonaws.com/' + process.env.S3_BUCKET + '/'
  #table-content
    table.striped.responsive-table.bordered
      thead
          tr
          each header in headers
            th= header

      tbody
        each row in results
          tr
            td
              a(href='/detail/' + row.print_id)= row.print_id
            td
              - if(row.image_file)
                a(href='/detail/' + row.print_id)
                  img.responsive-img(src=s3URL + row.image_file)
            td: pre= row.printer_setup
            td 
              - if(row.print_file)
                - var shapeFile = row.print_file.replace('files/shapes/', '');
                a(href=s3URL + row.print_file)= shapeFile
            td: pre= row.notes
            td= row.patron_id
            td= row.tech_id
            td.date= moment(row.date_created).format('MMM DD, YYYY')
